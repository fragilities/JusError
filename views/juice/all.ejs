<%- include('../partials/head') %>

<main>
  <div class="container">
    <h1>Juices</h1>
    
    <a href="/juice/add"><h2>Add juice...</h2></a>
    
    <table style="width:100%">
        <tr class="header">
            <th colspan="100%"><center>Juice List</center></th>
          </tr>
      <tr>
        <th>id</th>
        <th>Juice Name</th>
        <th>Ingredients</th>
        <th>Options</th>
      </tr>
      <% for(let i in juices) { %>
      <tr>
        <td><%= juices[i].id %></td>
        <td><%= juices[i].name %></td>
        <td><% for(let j in juices[i].Ingredients) { %> <%= juices[i].Ingredients[j].name %> <% } %></td>
    
        <td>
          <a href="/juice/edit/<%=juices[i].id%>">Edit</a> | <a href="/juice/delete/<%=juices[i].id%>">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </div>
</main>

<%- include('../partials/foot') %>